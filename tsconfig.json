{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./lib"
  ]
}
